 <div class="container-sm align-items-center">
        <div class="py-2 mt-4 align-items-center">
            <h1>Topluluğumuza Katılın</h1>
            <!-- Registeration Form -->
            <div class="ml-5 pt-3 align-items-center form-container">
                <form action="/enroll" method="POST">
                    <div class="">

                        <!-- First Name -->
                        <div class="input-group col-lg-6 mb-4">
                            <div class="input-group-prepend">
                            <span class="px-1 border-md border-right-0 me-2">
                                <img class="" src="/public/icon/profile.png">
                            </span>
                            </div>
                            <input id="firstName" type="text" name="firstname" placeholder="İsim" class="form-control bg-white border-left-0 border-md">
                        </div>

                        <!-- Last Name -->
                        <div class="input-group col-lg-6 mb-4">
                            <div class="input-group-prepend">
                            <span class="px-1 border-md border-right-0 me-2">
                                <img class="" src="/public/icon/profile.png">
                            </span>
                            </div>
                            <input id="lastName" type="text" name="lastname" placeholder="Soyisim" class="form-control bg-white border-left-0 border-md">
                        </div>

                        <!-- Email Address -->
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                            <span class="px-1 border-md border-right-0 me-2">
                                <img class="" src="/public/icon/mail.png">
                            </span>
                            </div>
                            <input id="email" type="email" name="email" placeholder="Email Address" class="form-control bg-white border-left-0 border-md">
                        </div>

                        <!-- Phone Number -->
                        <div class="input-group col-lg-6 mb-4">
                            <div class="input-group-prepend">
                            <span class="px-1 border-md border-right-0 me-2">
                                <img class="" src="/public/icon/phone.png">
                            </span>
                            </div>
                            <input id="phoneNumber" type="tel" name="phone" placeholder="Phone Number" class="form-control bg-white border-md border-left-0">
                        </div>

                        <!-- Student Number -->
                        <div class="input-group col-lg-12 mb-4">
                            <div class="input-group-prepend">
                            <span class="px-1 border-md border-right-0 me-2">
                                <img class="" src="/public/icon/student-number.png">
                            </span>
                            </div>
                            <input id="email" type="text" name="Student Number" placeholder="Öğrenci Numarası" class="form-control bg-white border-left-0 border-md">
                        </div>
                        <!-- Submit Button -->
                        <div class="form-group mb-0" style="margin-left: 47px;">
                            <button id="signup-btn" class="btn btn-outline" onclick="location.href='#'" type="button">Üye Ol</button>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
